{
  "name": "Redmart price per kilo",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Because it's the only way to compare prices",
  "permissions": ["activeTab", "declarativeContent", "*://*/*"],
  "homepage_url": "https://github.com/lihweilihwei/redmart-per-kilo",
  "background": {
	"scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon128.png"
  },
  "commands": {
	"_execute_browser_action": {
		"suggested_key": {
			"default": "Ctrl+1",
			"windows": "Ctrl+1"
		}
	}
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}